@model Product

<form method="post">
	@* this is option if the get ActionMethod Param is matching with model property, but keep it so when we hit post button we know the Id is populated from here *@
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Cateory</h2>
			<hr />
		</div>
		@* asp-validation-summary will display the validation at the top summary level 
			All - display all validation at summary including property level + model level
			ModelOnly - display model level messages at summary level and property related messages at field level
			Nonw - do not show summary level validation
		*@
		<div asp-validation-summary="ModelOnly"></div>
		<div class="row mb-3 p-1">
			<label asp-for="Title" class="p-0"></label>
			<input asp-for="Title" class="form-control" />
			<span asp-validation-for="Title" class="text-danger"></span>
		</div>
		<div class="row mb-3 p-1">
			<label asp-for="Description" class="p-0"></label>
			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
		<div class="row mb-3 p-1">
			<label asp-for="ISBN" class="p-0"></label>
			<input asp-for="ISBN" class="form-control" />
			<span asp-validation-for="ISBN" class="text-danger"></span>
		</div>
		<div class="row mb-3 p-1">
			<label asp-for="Author" class="p-0"></label>
			<input asp-for="Author" class="form-control" />
			<span asp-validation-for="Author" class="text-danger"></span>
		</div>
		<div class="row mb-3 p-1">
			<label asp-for="ListPrice" class="p-0"></label>
			<input asp-for="ListPrice" class="form-control" />
			<span asp-validation-for="ListPrice" class="text-danger"></span>
		</div>
		<div class="row mb-3 p-1">
			<label asp-for="Price" class="p-0"></label>
			<input asp-for="Price" class="form-control" />
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
		<div class="row mb-3 p-1">
			<label asp-for="Price50" class="p-0"></label>
			<input asp-for="Price50" class="form-control" />
			<span asp-validation-for="Price50" class="text-danger"></span>
		</div>
		<div class="row mb-3 p-1">
			<label asp-for="Price100" class="p-0"></label>
			<input asp-for="Price100" class="form-control" />
			<span asp-validation-for="Price100" class="text-danger"></span>
		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control" >Update</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">Back To List</a>
			</div>
		</div>
	</div>
</form>
@* 
benefit of adding below js script is that 
currently we are hitting service side code when we click on create button - thats not good
after adding this - it will not hit server side unless all the client side validations are resolved 
*@
@section Scripts {
	@{
		<partial name="_validationscriptspartial" />
	}
}
